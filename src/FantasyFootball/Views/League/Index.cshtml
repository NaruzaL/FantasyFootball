@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<FantasyFootball.Models.League>

<h3>Your leagues</h3>

@foreach (var league in Model)
{
   
        <h3>@Html.DisplayFor(model => league.Name)</h3>
        @if (league.TeamCount > 0)
        {
        <li>@Html.ActionLink("View this league", "Details", new { id = league.LeagueId })</li>
        }
        else
        {
        @Html.ActionLink("Create a team for this league", "Create", "Team", new { id = league.LeagueId})

        }

}
<div class="btn btn-default">@Html.ActionLink("Join a league", "Join")</div>
<div class="btn btn-default">@Html.ActionLink("Create a league", "Create")</div>