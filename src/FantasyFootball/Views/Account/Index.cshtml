@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<div class="accountIndex">
    <hr />
    @if (User.Identity.IsAuthenticated)
    {
        <h3>Hello @User.Identity.Name!</h3>
        @Html.ActionLink("See your leagues", "Index", "League")
        <hr />
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-info" value="Log out" />
        }
    }
    else
    {
        <div class="accountIndex">
            <h3>Welcome to Epicodus Fantasy Football.</h3>
            <p>Please sign in or create an account</p>
            <div class="btn btn-warning">@Html.ActionLink("Register", "Register")</div>
            <div class="btn btn-warning">@Html.ActionLink("Log in", "Login")</div>

        </div>
    }
</div>